<Directory "/www/wiki/html">
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    Allow from all
</Directory>

<VirtualHost *:80>
    DocumentRoot "/www/wiki/html"
    ServerName wiki.<%= @node[:oa_domain] %>
    ErrorLog "/var/log/wiki-error_log"
    CustomLog /var/log/wiki-access_log common
</VirtualHost>
