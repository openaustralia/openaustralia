<Directory "/www/blog/html">
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    Allow from all
</Directory>

<VirtualHost *:80>
    DocumentRoot "/www/blog/html"
    ServerName blog.<%= @node[:oa_domain] %>
    ErrorLog "/var/log/blog-error_log"
    CustomLog /var/log/blog-access_log common
</VirtualHost>
