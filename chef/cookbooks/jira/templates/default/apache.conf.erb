<Proxy *>
Order deny,allow
Allow from all
</Proxy>

<VirtualHost *:80>
    ServerName <%= @node[:jira_virtual_host_name] %>
    ErrorLog "/var/log/<%= @node[:jira_virtual_host_name] %>-error_log"
    CustomLog /var/log/<%= @node[:jira_virtual_host_name] %>-access_log common

    ProxyRequests       Off
    ProxyPreserveHost On
    ProxyPass           /       http://localhost:8080/
    ProxyPassReverse    /       http://localhost:8080/

</VirtualHost>

